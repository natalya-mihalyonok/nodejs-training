{
  "name": "nodejs_app",
  "version": "0.0.1",
  "author": "natallia_mikhalenak",
  "scripts": {
    "task1": "nodemon ./module_1/task_1.js",
    "task2": "nodemon ./module_1/task_2.js",
    "task3": "nodemon --exec babel-node ./module_1/task_3.js",
    "forever:start": "forever start ./build/index.js",
    "forever:stop": "forever stop ./build/index.js",
    "start": "npm run build && node ./build/index.js",
    "dev": "nodemon --exec babel-node ./src/index.js",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel src --out-dir ./build --copy-files --ignore 'src/**/*.spec.js'",
    "build": "npm run clean && npm run build-babel",
    "init_db": "babel-node ./init_db.js",
    "lint": "eslint ./src",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "7.13.*",
    "@babel/eslint-parser": "7.13.*",
    "@babel/node": "7.13.*",
    "@babel/preset-env": "7.13.9*",
    "@babel/cli": "7.14.*",
    "@babel/plugin-proposal-decorators": "7.13.*",
    "@babel/plugin-transform-runtime": "7.14.*",
    "@babel/runtime": "7.14.*",
    "babel-eslint": "10.1.*",
    "babel-jest": "27.0.*",
    "eslint": "7.22.*",
    "forever": "4.0.*",
    "jest": "27.0.*",
    "nodemon": "2.0.*"
  },
  "dependencies": {
    "cors": "2.8.*",
    "crypto-js": "^4.1.1",
    "csvtojson": "2.0.*",
    "dotenv": "10.0.*",
    "express": "4.17.*",
    "joi": "17.4.*",
    "jsonwebtoken": "8.5.*",
    "pg": "8.5.*",
    "pg-hstore": "2.3.*",
    "sequelize": "6.6.*",
    "uuid": "8.3.*",
    "winston": "3.3.*"
  }
}
